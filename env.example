# =============================================================================
# Chronix Environment Configuration
# =============================================================================
#
# Copy to .env and customize for your deployment.
#
# =============================================================================

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Session secret - MUST be set in production
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
# Or let `chronix init` generate it for you
CHRONIX_SESSION_SECRET=

# =============================================================================
# DATABASE
# =============================================================================

# Path to SQLite database file
# Contains all engagement data - protect this file!
CHRONIX_DB_PATH=./data/chronix.db

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host to bind to
# Default: 0.0.0.0 (all interfaces - accessible on network)
# Use 127.0.0.1 for localhost only (more secure for solo use)
CHRONIX_HOST=0.0.0.0

# Port to bind to
CHRONIX_PORT=8000

# =============================================================================
# PROXY / TLS
# =============================================================================

# Set to 'true' if Chronix is behind a reverse proxy that terminates TLS
# This enables:
#   - Secure cookie flag (requires HTTPS)
#   - Trust X-Forwarded-For headers for client IP
#
# IMPORTANT: Only set to 'true' if you have TLS termination configured!
CHRONIX_BEHIND_PROXY=false

# =============================================================================
# SESSION SETTINGS
# =============================================================================

# Session expiration in hours
# Users will need to re-login after this duration
# Default: 24 hours
CHRONIX_SESSION_EXPIRE_HOURS=24

# =============================================================================
# RATE LIMITING
# =============================================================================

# Login rate limit: max attempts per IP before blocking
# Default: 5 attempts
CHRONIX_RATE_LIMIT_LOGIN=5

# Login rate limit window in seconds
# Default: 300 seconds (5 minutes)
CHRONIX_RATE_LIMIT_LOGIN_WINDOW=300

# Write operations rate limit per user
# Prevents abuse if credentials are shared widely
# Default: 100 requests per minute
CHRONIX_RATE_LIMIT_WRITE=100

# Write rate limit window in seconds
# Default: 60 seconds
CHRONIX_RATE_LIMIT_WRITE_WINDOW=60

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins for CORS
# Only needed if frontend is served from different domain
# Example: https://chronix.example.com
# Leave empty for same-origin only (recommended)
CHRONIX_CORS_ORIGINS=

# =============================================================================
# DEBUG MODE
# =============================================================================

# WARNING: NEVER enable in production!
# 
# Debug mode enables:
#   - API documentation at /api/docs
#   - Relaxed CORS (localhost origins allowed)
#   - Random session secret if not set (insecure!)
#
CHRONIX_DEBUG=false
